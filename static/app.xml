<script src="//translatasaurus.appspot.com/static/app.js"></script>

<link rel="stylesheet" href="//translatasaurus.appspot.com/static/style.css" />

<div>
<div id="mic_background" class="red button">
  <div id="mic_icon">
    <input x-webkit-speech id="mic" />
  </div>
</div>
<div id="chatbox"></div>

<form class="form-search close" name="search_form" action="#" onSubmit="search()">
    <div id="icn-search"><div id="icn1"></div></div> 
    <div id="icn-close"><div id="icn2"></div></div>
    <input type="text" name="searchTerm" id="searchTerm" class="search_input"/>	
</form>
<div id="result"></div>

     Select Language:
    <select id="langselect">
	    <option selected value="en">English </option>
        <option value="ko">Korean </option>
        <option value="zh">Chinese </option>
</select>
